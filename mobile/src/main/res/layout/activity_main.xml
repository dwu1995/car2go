<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#2B1B17">
    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    <TextView android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/co2go"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="@dimen/abc_action_button_min_height_material"
        android:textColor="@color/button_material_light"
        android:layout_weight="0.1"
        android:textIsSelectable="false" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="90dp"/>
    <Button android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="#ffe0dfe1"
        android:text="@string/startTrip"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textColor="#ff0f0f0f"
        android:layout_weight="0.10" />
    <Button android:id="@+id/userHistory"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/userHistory"
        android:singleLine="true"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:textColor="#ff0f0f0f"
        android:background="#ffe0dfe1"
        android:layout_weight="0.10" />
    <Button android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/settings"
        android:textColor="#ff0f0f0f"
        android:singleLine="true"
        android:textSize="@dimen/abc_action_button_min_width_overflow_material"
        android:background="#ffe0dfe1"
        android:layout_weight="0.10" />
    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>

    <!-- More GUI components go here  --> <TextView android:id="@+id/author"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="@string/groupName"
    android:gravity="bottom|center_horizontal"
    android:textSize="@dimen/abc_text_size_small_material"
    android:textColor="@color/button_material_light"
    android:layout_weight="0.6"
    android:textIsSelectable="false" />

</LinearLayout>